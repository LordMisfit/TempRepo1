			SHAM A 2 A_Chase("", "", 0)
			SHAM AABBBCCCDDD 2 A_Chase
			SHAM B 0 A_JumpIf(Args[1] > 0, 1)
			Goto See+1
			SHAM B 0 A_Jump(16, "Missile")
			Goto See+1
		Melee:
			SHAM H 0 A_JumpIfInventory("WraithTeleporting", 1, 5)
			SHAM H 1 A_FaceTarget
			SHAM H 1 A_FaceTarget
			SHAM H 0 A_PlayWeaponSound("D3Wraith/Attack")
			SHAM H 8 A_MeleeAttack
			goto see
			SHAM A 0 A_ChangeFlag("Invulnerable", 0)
			SHAM A 0 A_SetShootable
			SHAM A 0 A_ChangeFlag("NonShootable", 0)
			SHAM A 0 A_ChangeFlag("Shootable", 1)
			SHAM A 0 A_ChangeFlag("NoTeleport", 0)
			SHAM A 0 A_ChangeFlag("NoRadiusDMG", 0)
			SHAM A 0 A_ChangeFlag("DropOff", 0)
			SHAM A 0 A_TakeInventory("WraithTeleporting", 1)
			SHAM H 2 A_FaceTarget
			SHAM H 0 A_PlayWeaponSound("D3Wraith/Attack")
			SHAM H 8 A_MeleeAttack
			Goto See
		Missile:
			SHAM A 0 A_JumpIfCloser(128, 2)
			SHAM A 0 A_JumpIfCloser(1024, 2)
			SHAM A 0
			Goto See
			SHAM A 0 A_Jump(128, "Teleport")
			Goto See
		Teleport:
			SHAM A 3 A_FaceTarget
			TNT1 A 0 A_GiveInventory("WraithTeleporting", 1)
			TNT1 A 0 A_ChangeFlag("Invulnerable", 1)
			TNT1 A 0 A_ChangeFlag("NonShootable", 1)
			TNT1 A 0 A_ChangeFlag("NoTeleport", 1)
			TNT1 A 0 A_ChangeFlag("NoRadiusDMG", 1)
			TNT1 A 0 A_ChangeFlag("DropOff", 1)
			TNT1 A 0 A_UnSetShootable
			TNT1 AAAAAAAAAAAAAAAAAAAAAAAAA 0 A_ExtChase(1, 0, 0, 0)
			TNT1 AAAAAAAAAAAAAAAAAAAAAAAAA 0 A_ExtChase(1, 0, 0, 0)
			TNT1 A 1 A_ExtChase(1, 0, 0, 0)
			SHAM A 0 A_ChangeFlag("Invulnerable", 0)
			SHAM A 0 A_SetShootable
			SHAM A 0 A_ChangeFlag("NonShootable", 0)
			SHAM A 0 A_ChangeFlag("Shootable", 1)
			SHAM A 0 A_ChangeFlag("NoTeleport", 0)
			SHAM A 0 A_ChangeFlag("NoRadiusDMG", 0)
			SHAM A 0 A_ChangeFlag("DropOff", 0)
			SHAM A 0 A_TakeInventory("WraithTeleporting", 1)
			SHAM A 3 A_FaceTarget
			Goto See
		Pain:
			SHAM H 4
			SHAM H 4 A_Pain
			Goto See
		Death:
			SHAM I 8
			SHAM J 8 A_Scream
			SHAM K 6
			SHAM L 6 A_NoBlocking
			SHAM M 6
			SHAM N 6
			SHAM O 6
			SHAM P -1
			Stop
		Raise:
			TROO ONMLKJI 8
			Goto See
	}
}


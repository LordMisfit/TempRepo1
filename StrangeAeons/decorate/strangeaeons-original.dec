Actor ScepterOfSouls : Weapon 11111
{
	//$Category Weapons
	Inventory.PickupMessage "You got the Scepter of Souls!"
	Inventory.PickupSound "Misc/W_PkUp"
	Obituary "%k sucked out %o's soul"
	Weapon.SelectionOrder 2400
	Weapon.Slotnumber 2
	Weapon.SisterWeapon "ScepterOfSouls~Powered"
	Weapon.KickBack 0
	AttackSound "Weapons/SoulScepter/Hit"
	States
	{
		Spawn:
			SLSP A -1
			Loop
		Ready:
			SLSP B 0 Bright A_StopSoundEx("SoundSlot7")
			SLSP BBBBB 1 A_WeaponReady
			SLSP CCCCC 1 A_WeaponReady
			SLSP DDDDD 1 A_WeaponReady
			SLSP EEEEE 1 A_WeaponReady
			Loop
		Deselect:
			SLSP B 0 A_StopSoundEx("SoundSlot7")
			SLSP B 1 A_Lower
			Loop
		Select:
			SLSP B 1 A_Raise
			Loop
		Fire:
			SLSP F 0 Bright A_PlaySoundEx("Weapons/SoulScepter/Fire1", "SoundSlot6", 0)
			SLSP F 4 Bright
			SLSP F 0 Bright A_PlaySoundEx("Weapons/SoulScepter/Loop", "SoundSlot7", 1)
		Hold:
			SLSP G 2 Bright A_CustomPunch(Random(3, 6), 1, 1, "SoulScepterPuff", 256)
			SLSP H 2 Bright
			SLSP I 2 Bright A_CustomPunch(Random(3, 6), 1, 1, "SoulScepterPuff", 256)
			SLSP J 2 Bright
			SLSP K 2 Bright A_CustomPunch(Random(3, 6), 1, 1, "SoulScepterPuff", 256)
			SLSP K 0 Bright A_ReFire
			SLSP L 0 Bright A_StopSoundEx("SoundSlot7")
			SLSP L 0 Bright A_PlaySoundEx("Weapons/SoulScepter/Stop", "SoundSlot6", 0)
			SLSP LM 4 Bright
			Goto Ready
	}
}

Actor ScepterOfSouls~Powered : ScepterOfSouls
{
	Weapon.SisterWeapon "ScepterOfSouls"
	Weapon.AmmoUse 1
	AttackSound "Weapons/SoulScepter/Hit"
	+Weapon.Powered_Up
	Obituary "%o's soul was consumed by %k"
	States
	{
		Fire:
			SLSP F 0 Bright A_PlaySoundEx("Weapons/SoulScepter/Fire1", "SoundSlot6", 0)
			SLSP F 4 Bright
			SLSP F 0 Bright A_PlaySoundEx("Weapons/SoulScepter/Loop", "SoundSlot7", 1)
		Hold:
			SLSP G 2 Bright A_CustomPunch(0, 1, 1, "SoulScepterPowerPuff", 256)
			SLSP H 2 Bright
			SLSP I 2 Bright A_CustomPunch(0, 1, 1, "SoulScepterPowerPuff", 256)
			SLSP J 2 Bright
			SLSP K 2 Bright A_CustomPunch(0, 1, 1, "SoulScepterPowerPuff", 256)
			SLSP K 0 Bright A_ReFire
			SLSP L 0 Bright A_StopSoundEx("SoundSlot7")
			SLSP L 0 Bright A_PlaySoundEx("Weapons/SoulScepter/Stop", "SoundSlot6", 0)
			SLSP LM 4 Bright
			Goto Ready
	}
}

